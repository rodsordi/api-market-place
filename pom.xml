    <build>
        <pluginManagement>

            <!-- Empacota as classes de testes dos módulos para serem reaproveitados entre os mesmos -->

            <plugins>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-jar-plugin</artifactId>
                    <version>3.4.2</version>
                    <executions>
                        <execution>
